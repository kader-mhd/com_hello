  <author>Fabio Z Tessitore</author>
  <authorEmail>fabioztessitore@gmail.com</authorEmail>
  <copyright>GPL License</copyright>
  <!-- in component table -->
  <version>0.0.1</version>
  <!-- optional -->
  <description>Hello World! (Joomla 3.0, new MVC)</description>
  
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates/mysql</schemapath>
